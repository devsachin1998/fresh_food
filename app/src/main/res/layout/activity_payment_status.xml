<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.SignupDoneActivity">

        <LinearLayout
android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dimen_20dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgs"
                android:layout_width="@dimen/dimen_96dp"
                android:layout_height="@dimen/dimen_96dp"
                android:src="@drawable/ic_check"
                android:visibility="gone"
                app:tint="@color/green" />
            <ImageView
                android:id="@+id/imgc"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:visibility="gone"
                android:src="@drawable/ic_cross"
                 />
            <TextView
                android:id="@+id/txtstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_8dp"
                android:gravity="center"
                android:textStyle="bold"
                android:visibility="gone"
                android:textColor="@color/green"
                android:text="Transaction Successful !"
                android:textSize="25dp" />
            <TextView
                android:id="@+id/txtstatus1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_8dp"
                android:gravity="center"
                android:textStyle="bold"
                android:visibility="gone"
                android:textColor="@color/red"
                android:text="Transaction Successful !"
                android:textSize="25dp" />
            <TextView
                android:id="@+id/txtmsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_8dp"
                android:gravity="center"
                android:text="@string/payment_done"
                android:textSize="@dimen/sp20" />


            <Button
                android:id="@+id/btnhome"
                style="@style/ButtonStyle"
                android:paddingStart="@dimen/dimen_50dp"
                android:paddingEnd="@dimen/dimen_50dp"
                android:layout_margin="@dimen/dimen_16dp"
                android:text="Home" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>