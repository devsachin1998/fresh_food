<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
               android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_4dp"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:padding="@dimen/dimen_6dp"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:weightSum="2"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtOrderNumber"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Order No."
                android:textSize="@dimen/sp16"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtOrderAmount"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order No."
                android:layout_weight="1"
                android:gravity="end"

                android:textSize="@dimen/sp16"
                android:textStyle="bold" />

        </LinearLayout>
            <LinearLayout
                android:id="@+id/itemLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

            </LinearLayout>

<!--            <TextView-->
<!--                android:id="@+id/txtOrderAmount"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="@dimen/dimen_4dp"-->
<!--                android:fontFamily="@font/nunito_bold"-->

<!--                android:visibility="gone" />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kdlfngn"
                android:layout_weight="1"
                android:textColor="@color/app_color"
                android:textSize="@dimen/sp12" />
            <TextView
                android:id="@+id/txStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="vnd"
                android:textColor="@color/app_color"

                android:textSize="@dimen/sp12"
                />


        </LinearLayout>
            <TextView
                android:id="@+id/txtExpectedDelivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:background="@color/off_white"
                android:drawablePadding="@dimen/dimen_4dp"
                android:fontFamily="@font/nunito_semi_bold"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dimen_4dp"
                android:paddingTop="@dimen/dimen_2dp"
                android:paddingEnd="@dimen/dimen_4dp"
                android:paddingBottom="@dimen/dimen_2dp"
                android:text="Estimate delivery time: 26 Nov 2021 - 4pm"
                android:textSize="@dimen/sp12"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/ic_delivery" />

        </LinearLayout>



        <ImageView
            android:id="@+id/imgReceipt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:visibility="gone"

            android:src="@drawable/ic_receipt"
            app:tint="@color/app_color" />

    </RelativeLayout>

</layout>