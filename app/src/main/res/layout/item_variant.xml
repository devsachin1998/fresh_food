<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_8dp"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtItemUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:text="500gm"
                    android:textColor="@color/half_black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/dimen_4dp"
                    android:paddingEnd="@dimen/dimen_4dp"
                    android:text="-" />

                <TextView
                    android:id="@+id/txtItemRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="40 Rs."
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:gravity="center"
                android:layout_marginEnd="@dimen/sp20"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/more"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:gravity="center"


                    android:src="@drawable/add"
                    android:drawableLeft="@drawable/ic_add"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp12" />

                <me.himanshusoni.quantityview.QuantityView
                    android:id="@+id/qtyView"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
android:visibility="gone"
app:qv_quantityBackground="@color/white"

                    app:qv_addButtonBackground="@drawable/more"
                    app:qv_addButtonTextColor="@color/white"
                    app:qv_quantityPadding="@dimen/sp10"
                    app:qv_removeButtonBackground="@drawable/less"
                    app:qv_removeButtonTextColor="@color/white" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/txtItemTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:text="1200 Rs."
            android:textColor="@color/black"
            android:textSize="@dimen/sp18"
            android:visibility="gone" />

    </LinearLayout>

</layout>